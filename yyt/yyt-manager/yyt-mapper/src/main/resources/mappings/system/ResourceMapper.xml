    <select id="findResource" resultMap="ChildResultMap" >
      SELECT sr1.*,
       sr2.id  menu_id,
       sr2.resource_name menu_resource_name,
       sr2.url menu_url,
       sr2.parent_id menu_arent_id,
       sr2.type menu_type,
