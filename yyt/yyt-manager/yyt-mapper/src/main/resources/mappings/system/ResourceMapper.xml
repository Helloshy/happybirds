    <sql id="findByPageSql" >
        <!-- WARNING -  自动生成 2016-05-23  分页查询SQL -->
        select a.* from sys_resource a
        <where >
            <if test="param.id != null " >
                and a.id = #{param.id,jdbcType=BIGINT}
            </if>
            <if test="param.resourceName != null and param.resourceName != ''" >
                and a.resource_name = #{param.resourceName,jdbcType=VARCHAR}
            </if>
            <if test="param.url != null and param.url != ''" >
