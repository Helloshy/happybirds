        </where>
    </sql>
    
    <select id="findResourceByRoleId" resultMap="BaseResultMap">
    	SELECT
			id, resource_name, url, parent_id, type, remark,permission,icon,btn
		FROM sys_resource
		WHERE id IN (SELECT resource_id FROM sys_role_resource WHERE 1 = 1 AND role_id = #{key})
		ORDER BY id ASC
    </select>
    
    <select id="findList" resultMap="BaseResultMap">
    	select temp.* from (
        <include refid="findByPageSql" />
