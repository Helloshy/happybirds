    <!-- 根据用户查询  用户拥有的菜单资源 -->
     <select id="findUserResourcesByUserId" resultMap="BaseResultMap">
     	SELECT r.* FROM sys_system_user_role AS ur 
		INNER JOIN sys_role AS ro ON ur.role_id = ro.id 
		JOIN sys_resource AS r 
		WHERE 
		ur.user_id = #{userId} 
		AND (ro.role_value = 'ROLE_SUPER_ADMIN' OR EXISTS(SELECT l1.id FROM sys_role_resource AS l1 WHERE l1.role_id = ro.id AND l1.resource_id = r.id)) 
		GROUP BY 
		id,resource_name,url,parent_id,TYPE,remark
     </select> 
    
