    <select id="findListByParam" resultType="java.util.Map">
        SELECT
          c.`company_name`,un.id,un.`record_tag`,un.`real_name`,un.`tel`,
          CONCAT(un.`province`,un.`district`,un.`unit`) address,un.state,un.meter_type,
          un.meter_no,un.`balance_amount`,un.`update_time`,su.`user_name`
          FROM user_number un LEFT JOIN app_company c ON un.`company_id` = c.`id`
          LEFT JOIN sys_system_user su ON un.`update_by`=su.`id`;
        <where>
            <if test="param.companyId != null and param.userId !='' " >
                and uid = #{param.userId,jdbcType=BIGINT}
            </if>
            <if test="param.status != null" >
