    <select id="getCollectionList" resultType="java.util.Map">
    	SELECT c.id,n.id AS nid,n.logo_path AS logoPath,n.title,n.counts,CAST(c.create_time AS CHAR) AS createTime,n.id as newsId,
    	(SELECT COUNT(1) FROM user_collection WHERE data_type=2 AND news_id = n.id AND uid=#{uid}) AS isPoint,
		(SELECT COUNT(1) FROM user_collection WHERE data_type=2 AND news_id = n.id) AS likes,
		(SELECT COUNT(1) FROM app_news_order WHERE news_id = n.id AND is_pay=1) AS numbers
		FROM user_collection c
		INNER JOIN app_news n ON n.id=c.news_id
		WHERE c.uid=#{uid} AND c.record_type=3 AND c.data_type=1
		ORDER BY c.create_time DESC LIMIT #{page},#{rows}
	</select>
		
