    <!-- 根据角色id获取资源 -->
    <select id="findResourceByRoleId" resultType="java.lang.Long">
    	SELECT rr.resource_id FROM sys_role_resource rr WHERE rr.role_id=#{roleId}
    </select>
    
    <!-- 获取全部资源 -->
    <select id="findResourcesById" resultMap="BaseResultMap">
    	SELECT r.* FROM sys_resource r 
    	<where>
    		<if test="ids != null">
    		r.id IN 
    		<foreach collection="ids" item="item" open="(" separator="," close=")" >
	            #{item}
	        </foreach>
    		</if>
    	</where>
        order by r.id
    </select>
    
    <!-- 角色名 -->
    <select id="findRoleByUserId" resultType="java.util.Map">
    	SELECT r.role_value AS roleValue,r.id FROM sys_system_user_role ur INNER JOIN sys_role r ON ur.role_id=r.id
		WHERE ur.user_id=#{userId}
    </select>
    
    <!-- 获取当前资源以及父资源id -->
    <select id="findResourceAll" resultType="java.lang.Long">
    	SELECT DISTINCT k.id FROM (
			SELECT sr.id AS id FROM sys_resource sr WHERE sr.id IN
			<foreach collection="ids" item="item" open="(" separator="," close=")" >
	            #{item}
	   		</foreach>
			UNION ALL 
			SELECT sr.parent_id AS id FROM sys_resource sr WHERE sr.id IN
			<foreach collection="ids" item="item" open="(" separator="," close=")" >
	            #{item}
	   		</foreach>
		) AS k WHERE k.id != -1 ORDER BY k.id
    </select>
    
