    <select id="get" resultMap="entityMap" parameterType="java.lang.Long" >
        select
        <include refid="listColumn" />
        from device
        where id = #{id, jdbcType=BIGINT}
    </select>

    <select id="findByIp" resultMap="entityMap" parameterType="java.lang.String" >
        select
        <include refid="listColumn" />
        from device
