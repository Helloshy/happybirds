    </update>

    <select id="count" resultType="java.lang.Integer" >
        select count(1) from device
    </select>

    <select id="find" resultMap="entityMap" parameterType="map" >
        select
        <include refid="listColumn" />
        from device
        limit #{start},#{count}
    </select>

    <update id="delete" parameterType="java.lang.Long" >
        update device
        set is_deleted = true where is_deleted = false and id = #{id}
    </update>

    <select id="findByIpAndLaneId" resultMap="entityMap" parameterType="map" >
        select
        <include refid="listColumn" />
        from device
        where lane_id=#{id} and ip=#{ip} and type=#{type}
    </select>

    <select id="findByParkIdAndType" resultMap="entityMap" parameterType="map">
        select
        <include refid="listColumn" />
        from device
        where park_id=#{parkId} and type =#{type} and is_deleted = 0 and ip <![CDATA[<>]]> '127.0.0.1' limit 1
    </select>

    <select id="findByDeviceId" resultType="java.lang.Long" parameterType="map">
        select id from device where park_id = #{parkId} and ip = #{ip} and name = #{deviceName} and is_deleted = 0
    </select>

    <select id="findById" resultMap="entityMap" parameterType="java.lang.Long">
        select <include refid="listColumn"/> from device where id = #{deviceId}
    </select>

    <select id="findByParkIdAndIpAndType" resultMap="entityMap" parameterType="map">
        select
